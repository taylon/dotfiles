#!/usr/bin/env bash

# Create VIM's backup, swap and undo history folders
mkdir $HOME/Development/dotfiles/vim/.backups
mkdir $HOME/Development/dotfiles/vim/.swaps
mkdir $HOME/Development/dotfiles/vim/.undo

# Create folder for N
mkdir -p $HOME/.node/bin

# Setup SSH keys
# Host github.com
#   IdentityFile ~/.ssh/


# NPM stuff - Do this after setting up N/Node
npm install -g bash-language-server
npm install -g trash-cli
