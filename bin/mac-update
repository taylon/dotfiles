#!/usr/bin/env bash

source /home/taylon/Development/dotfiles/bash/libs/print.sh
source /home/taylon/Development/dotfiles/bash/libs/system_update.sh

if [[ $(uname) == "Darwin" ]]; then
  print::fail "You should only run this on MacOS"
  exit 1
fi

# We will update using homebrew and that should not run as root
if [[ $(id -u) -eq 0 ]]; then
  print::fail "Do not run this as root!"
  exit 1
fi

echo
print::note "Updating brews..."
brew update

brew upgrade
brew cask upgrade

brew cleanup
brew cask cleanup

system_update::common
