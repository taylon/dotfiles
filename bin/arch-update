#!/usr/bin/env bash

source /home/taylon/Development/dotfiles/bash/libs/print.sh
source /home/taylon/Development/dotfiles/bash/libs/system_update.sh

if [[ ! -f "/etc/arch-release" ]]; then
  print::fail "You should only run this on Arch Linux"
  exit 1
fi

# We will update using yay and that should not run as root
if [[ $(id -u) -eq 0 ]]; then
  print::fail "Do not run this as root!"
  exit 1
fi

# Print latest Arch news
rsstail -1 -n 2 -pdH -u https://www.archlinux.org/feeds/news/
echo

# Confirm that we should continue after reading news
read -n 1 -p "Should we continue? [y/N] " answer
echo
if [[ ! $answer =~ ^[Yy]$ ]]; then
  exit 0
fi

read -n 1 -p "Should we update the mirrorlist? [y/N] " answer
echo
if [[ $answer =~ ^[Yy]$ ]]; then
  mirrorlist_path="/etc/pacman.d/mirrorlist"

  # Remove old bkp file
  if [ -f "$mirrorlist_path.bkp" ]; then
    sudo rm -f /etc/pacman.d/mirrorlist.bkp
  fi

  # Backup current mirrorlist
  sudo cp /etc/pacman.d/mirrorlist /etc/pacman.d/mirrorlist.bkp

  # Update mirrorlist
  print::note "Generating new mirrorlist..."
  sudo reflector --latest 100 --protocol http --protocol https --sort rate --country 'United States' --save "$mirrorlist_path"
  print::sucess "mirrorlist sucessfully updated!"
fi

# Update!
echo
print::note "Updating Arch packages..."
yay -Syu

echo
print::note "Updating tldr cache..."
tldr --update

system_update::common
