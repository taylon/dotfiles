set nocompatible

" Enable line numbers
set number

" Search options
set hlsearch " Highlight the last used search pattern.
set incsearch " Highlight matched patterns as you type

" Improved command line completion
set wildmenu

" Highlight current line
set cursorline

" Make tabs as wide as two spaces
set tabstop=2

" Don't wrap lines
set nowrap

" Increase history from 20 default to 1000
set history=1000

" Show the cursor position
set ruler

" Start scrolling three lines before the horizontal window border
set scrolloff=3

" Use the OS clipboard by default
set clipboard=unnamed

" Speed up viewport scrolling
nnoremap <C-e> 3<C-e>
nnoremap <C-y> 3<C-y>

" Enable/Disable paste mode
nnoremap <F4> :set invpaste paste?<CR>
imap <F4> <C-O><F4>
set pastetoggle=<F4>

" Maps common commands to avoid typos
cab W w
cab Q q
cab Wq wq
cab wQ wq
cab WQ wq
cab Qa qa
cab Wqa wqa

" Centralize backups, swapfiles and undo history
set backupdir=~/.vim/.backups
set directory=~/.vim/.swaps
set undodir=~/.vim/.undo

" Plugins configuration

" vim-plug
call plug#begin('~/.vim/plugged')

Plug 'joshdick/onedark.vim'
Plug 'scrooloose/nerdcommenter'
Plug 'dag/vim-fish', { 'for': 'fish' }

call plug#end()

" Set color scheme
colorscheme onedark

" Enable 24-bit (true-color) mode
if (has("termguicolors"))
  set termguicolors
endif

" NERDCommenter
let g:NERDSpaceDelims = 1 " Add spaces after comment delimiters by default
let g:NERDDefaultAlign = 'left' " Align delimiters flush left instead of following code indentation
map <C-_> <leader>c<Space> " Remap the NERDComToggleComment command to Ctrl+/
