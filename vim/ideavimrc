set number
set relativenumber
set scrolloff=3
set hlsearch
set incsearch
set showmode
set smartcase

set surround
set commentary

" Integrate with system clipboard
set clipboard+=unnamed

" Keybindings
"
" Remap j and h to work better with Colemak-DHm
nmap h <Down>
nmap dh d<Down>
nmap ch c<Down>
nmap yh y<Down>

nmap k <Up>
nmap dk d<Up>
nmap ck c<Up>
nmap yk y<Up>

nmap l <Right>
nmap j <Left>

" Y should behave just like D or C
nmap Y y$

" Jumps
nmap gr :action GotoDeclaration<Enter>

" Quick documentation
nmap <C-\>d :action QuickJavaDoc<Enter>

" Action List
nmap <C-\>a :action ShowIntentionActions<Enter>

" CamelCase navigation
nmap <Space>w :action VimMotionCamelRight<Enter>
nmap <Space>b :action VimMotionCamelLeft<Enter>

" Save with Ctrl-s
nmap <M-s> :w<Enter>
imap <M-s> <Esc>:w<Enter>

" New line in Normal Mode
nmap <Enter> o<Esc>
nmap <S-Enter> O<Esc>

" New line in Insert mode
imap <D-Enter> <Esc>o
imap <D-S-Enter> <Esc><S-o>

nmap <C-\>v <C-w>v
nmap <C-\><Right> <C-w><Right> 
nmap <C-\><Left> <C-w><Left> 

" Splits
nmap <C-\>v <C-w>v
nmap <C-\>s <C-w>s

nmap <C-\><Right> <C-w><Right>
nmap <C-\>l <C-w><Right>

nmap <C-\><Left> <C-w><Left>
nmap <C-\>j <C-w><Left>

nmap <C-\><Up> <C-w><Up>
nmap <C-\>k <C-w><Up>

nmap <C-\><Down> <C-w><Down>
nmap <C-\>h <C-w><Down>
