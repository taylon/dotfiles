set number
set relativenumber
set scrolloff=5
set hlsearch
set incsearch
set showmode
set ignorecase
set smartcase

set surround
set commentary
"set easymotion
set textobj-entire
set argtextobj
set highlightedyank
set ideajoin

let g:highlightedyank_highlight_color = "rgba(62, 68, 82, 1)"

" Remove icon from status bar
set ideastatusicon=disabled

" Integrate with system clipboard
set clipboard+=unnamed


" Keybindings

nmap Y y$

nmap <f12> <action>(SearchEverywhere)
nmap <f6>t <action>(SwitchHeaderSource)
nmap <f6>e <action>(ActivateProjectToolWindow)
nmap <f6><esc> <action>(HideActiveWindow)
nmap <f6>a <action>(ShowIntentionActions)
nmap <f6>r <action>(RenameElement)
" nmap <f6>d <action>(QuickJavaDoc)<enter>

" Jumps
nmap gr <action>(FindUsages)
nmap <f7> <action>(Back)
nmap <f10> <action>(Forward)

" CamelCase navigation
nmap <space>w <action>(VimMotionCamelRight)
nmap <space>b <action>(VimMotionCamelLeft)

" Save with ctrl-s or cmd-s
" nmap <m-s> :wa<enter>
" imap <m-s> <esc>:wa<enter>
nnoremap <c-s> :wa<enter>
inoremap <c-s> <esc>:wa<enter>

" New line in Normal Mode
nmap <enter> o<esc>
nmap <s-enter> O<esc>

" New line in Insert mode
" imap <d-enter> <esc>o
" imap <d-s-enter> <esc><s-o>
inoremap <c-enter> <esc>o
inoremap <c-s-enter> <esc><s-o>

" Splits
nnoremap <c-w> :q<enter>

nnoremap <f6>v <c-w>v
nnoremap <f6>s <c-w>s

nnoremap <f6><right> <c-w><right>
nnoremap <f6>l <c-w><right>

nnoremap <f6><left> <c-w><left>
nnoremap <f6>j <c-w><left>

nnoremap <f6><up> <c-w><up>
nnoremap <f6>k <c-w><up>

nnoremap <f6><down> <c-w><down>
nnoremap <f6>h <c-w><down>

