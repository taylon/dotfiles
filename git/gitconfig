[core]
	editor = nvim
  pager = delta 

[init]
	defaultBranch = main

[advice]
	statusHints = false

[user]
	name = Taylon Silva
	email = taylonsilva@gmail.com

[pull]
	ff = only

[alias]
	l = log --graph --decorate --pretty=oneline --abbrev-commit --all -n 20
	c = commit -m
	ca = commit --amend
	co = checkout
	s = status
	st = stash
	sp = stash pop
	a = add
	aa = add --al
	d = diff
	dk = difftool --no-symlinks --dir-diff
	pm = push origin master

[delta]
  syntax-theme = TwoDark
  line-numbers = true

[diff]
  colorMoved = default

[difftool]
	prompt = false
	trustExitCode = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "status"]
	added = green
	changed = yellow
	untracked = magenta

[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = "red bold 52"
	newNormal = "green bold"
	newHighlight = "green bold 22"

[includeIf "gitdir:~/programming/riot/"]
  path = .gitconfig_riot
